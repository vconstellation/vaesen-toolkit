<Page x:Class="VaesenToolkit.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VaesenToolkit.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <!-- Static content for the login page -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Username:"/>
            <TextBox Text="admin" Width="200"/>
            <TextBlock Text="Password:"/>
            <PasswordBox Password="1234" Width="200"/>
            <Button Content="Login" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
